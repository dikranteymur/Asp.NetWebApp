@* Model kullanmak *@

@* model kucuk harfle yazilir *@
@model List<string>

@* Model butuk harfle yazilir *@
@* @foreach (var item in Model)
    {
    <p>@item</p>
    } *@

@* Yeni Gosterim *@

<ol>
    @foreach (var item in Model)
    {
        <li>@item</li>
    }
</ol>


<h2>Tablo Gosterimi</h2>
<table class="table table-striped table-hover">

    @foreach (var item in Model)
    {
        <tr>
            <td>@item</td>
        </tr>
    }

</table>

<h2>Tablo Icinde Button Gosterimi</h2>

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td><button class="btn btn-danger btn-sm">@item</button></td>
        </tr>
    }
</table>

@* Yukaridaki buttonlar icin style ile genislikler duzenlendi *@
<style>
    .btn {
        width: 80px;
    }
</style>